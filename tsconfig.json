{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "./built/",
    "sourceMap": true,
    "types": ["node", "mocha"],
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "lib": ["es2015"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}